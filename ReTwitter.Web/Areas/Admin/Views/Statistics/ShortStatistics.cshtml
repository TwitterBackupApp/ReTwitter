@using ReTwitter.Web.Areas.Admin.Models.Users
@model ReTwitter.Web.Areas.Admin.Models.Statistics.ShortStatisticsViewModel

<br />
<br />
<br />
@{
    ViewData["Title"] = "Individual User Statistics";
}

<h1>@ViewData["Title"]</h1>
<h2>Statistics for user @Model.Username</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                User status
            </th>
            <th>
                Saved Twitter Accounts
            </th>
            <th>
                Deleted Twitter Accounts
            </th>
            <th>
                Saved tweets
            </th>
            <th>
                Deleted tweets
            </th>
        </tr>
    </thead>
    <tbody>
    
    <tr>
        <th>
            @Model.ActivelyFollowedAccountsCount
        </th>
        <th>
            @Model.DeletedAccountsCount
        </th>
        <th>
            @Model.SavedTweetsCount
        </th>
        <th>
            @Model.DeletedTweetsCount
        </th>
    </tr>
    </tbody>
</table>