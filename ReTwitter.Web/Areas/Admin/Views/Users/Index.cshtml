@using ReTwitter.Web.Areas.Admin.Models.Users
@model ReTwitter.Web.Areas.Admin.Models.Users.UserListingsViewModel

    <br />
    <br />
    <br />
    @{
        ViewData["Title"] = "User Administration";
    }

    <h1>@ViewData["Title"]</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Change Role
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
            <tr>
                <th>
                    @user.UserName
                </th>
                <th>
                    @user.Email
                </th>
                <th>
                    <form asp-action="AddToRole" method="post">
                        <div class="row">
                            <div class="col-md-9">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" asp-items="Model.Roles" class="form-control"></select>
                            </div>
                            <div class="col-md-3">
                                <input class="btn btn-sm btn-primary" type="submit" value="Add To Role" />
                            </div>
                        </div>
                    </form>
                </th>
                <th>
                    @Html.ActionLink("Statistics", "ShortStatistics", "Statistics", new { userId = user.Id, userName = user.UserName }, new { @class = "btn btn-info" })
                </th>
                <th>
                    @Html.ActionLink("Delete", "Delete", "Users", new { userId = user.Id, userName = user.UserName }, new { @class = "btn btn-info" })
                </th>
            </tr>
            }
        </tbody>
    </table>