@model IEnumerable<ReTwitter.DTO.FolloweeDisplayListDto>
@{
    ViewData["Title"] = "FolloweeCollection";
}

<br />
<br />
<br />
<h2>Followees Collection</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScreenName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScreenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FolloweeOriginallyCreatedOn)
            </td>
            <td>
                @Html.ActionLink("Details", "FolloweeDetailsFromDb", new { id = item.FolloweeId })
            </td>
            <td>
                @Html.ActionLink("Update", "FolloweeUpdate", "Followee", new { followeeId = item.FolloweeId }, new { @class = "btn btn-info" })
            </td>
            <td>
                @Html.ActionLink("Unfollow", "FolloweeDeleted", "Followee", new { followeeId = item.FolloweeId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }
</table>